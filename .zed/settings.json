// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "languages": {
    "HTML": {
      "format_on_save": "off"
    },
    "Rust": { "formatter": "language_server", "format_on_save": "on" }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "allTargets": true,
          "extraArgs": [
            "--all-features",
            "--",
            "-D",
            "warnings",
            "-W",
            "clippy::pedantic",
            "-W",
            "clippy::nursery",
            "-W",
            "rust-2018-idioms"
          ]
        },
        "cargo": {
          "features": ["mock-time"]
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json.schemas.exclude": ["**/node_modules/**", "bun.lock"]
      }
    }
  },
  "context_servers": {
    "nuxt-ui": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "https://ui.nuxt.com/mcp"],
      "env": {}
    }
  }
}
